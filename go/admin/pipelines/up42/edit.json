            }
          ],
          "properties": [
            {
              "name": "coverage.class",
              "source": "target/emma/coverage.xml",
              "xpath": "substring-before(//report/data/all/coverage[starts-with(@type,'class')]/@value, '%')"
            }
          ]
        }
      ]
    }
  ]
}